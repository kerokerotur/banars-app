{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "allowImportingTsExtensions": true,
    "moduleDetection": "force",
    "noEmit": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "lib": [
      "ES2022",
      "DOM"
    ],
    "types": [
      "vitest/globals"
    ],
    "baseUrl": ".",
    "paths": {
      "@core/*": ["./core/*"],
      "@adapters/*": ["./adapters/*"]
    }
  },
  "include": [
    "./**/*.ts"
  ]
}
